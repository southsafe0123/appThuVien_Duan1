<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/ivHinh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="4sp"
            android:layout_weight="1.5" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5">

            <TextView
                android:id="@+id/tvTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4sp"
                android:text="Tên sách:"
                android:textStyle="bold"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tvTtileSL"
                style="@style/myStyle"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTen"
                android:layout_alignParentStart="true"
                android:layout_marginStart="7sp"
                android:layout_marginTop="10sp"
                android:text="Số lượng: " />

            <LinearLayout
                android:id="@+id/viewSL"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/tvTen"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@+id/tvTtileSL"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnTang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/my_btn_custom_1"
                    android:src="@drawable/baseline_add_24"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tvSL"
                    style="@style/myStyle"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/btnGiam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/my_btn_custom_1"
                    android:src="@drawable/baseline_remove_24"
                    android:visibility="invisible" />
            </LinearLayout>


            <TextView
                android:id="@+id/tvGia"
                style="@style/myStyle"
                android:layout_below="@+id/tvTtileSL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="7dp"
                android:text="GIÁ: "
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:fontFamily="monospace"
                android:textSize="22sp" />
        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>