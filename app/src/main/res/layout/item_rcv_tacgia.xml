<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15sp"
        android:paddingBottom="10sp">
        <TextView
            android:id="@+id/tvSlSach"
            android:text="Số sách hiện có: "
            android:textSize="20dp"
            android:textStyle="italic|bold"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20sp"
            android:layout_below="@+id/tvTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/xanh_btn"
            android:id="@+id/tvTen"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="315sp"
            android:padding="5sp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:text="Ten"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="60sp"
            android:layout_height="50sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="325sp"
            android:layout_marginTop="19sp"
            android:src="@drawable/icon_delete" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>