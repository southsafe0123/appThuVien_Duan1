<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:layout_margin="10sp"
    app:cardElevation="5sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:background="#9EE3DFDF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTen"
            android:textStyle="bold"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="25sp"
            />

    <LinearLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"

        >


        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5sp"
            >

            <ImageView
                android:id="@+id/ivHinh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTheloai"
                android:fontFamily="sans-serif"
                android:text="theloai"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTacGia"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:text="tacgia"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSoluong"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:text="tinhtrang"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvGia"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:text="giathue"
                android:layout_marginBottom="5sp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:id="@+id/btnThemGioHang"
                android:text="Thêm giỏ hàng"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:background="@drawable/backgr_btn3"
                android:layout_marginBottom="10sp"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>