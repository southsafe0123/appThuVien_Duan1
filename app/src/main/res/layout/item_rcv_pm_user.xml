<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1fb497"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/bungee_inline"
        android:text="Đơn Hàng \n Hiện Tại"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:padding="10dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvNgay"
                android:text="Ngày thuê: "
                android:fontFamily="monospace"
                android:textSize="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@id/tvNgay"
                android:id="@+id/tvMa"
                android:fontFamily="monospace"
                android:textSize="15dp"
                android:text="Mã hóa đơn:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Trạng thái: "
                android:textSize="15dp"
                android:fontFamily="monospace"
                android:id="@+id/tvTitleTT"
                android:layout_below="@+id/tvMa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="39dp"
                android:layout_toRightOf="@id/tvTitleTT"
                android:id="@+id/tvTT"

                android:text=" "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@+id/tvTitleTT"
                android:text="Tổng tiền: "
                android:textSize="15dp"
                android:fontFamily="monospace"
                android:id="@+id/tvTongTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_info_24" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>