<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
         android:background="@drawable/textline_top"
        android:id="@+id/tvTongTien"
        android:layout_width="match_parent"
        android:textSize="17dp"
        android:padding="7dp"
        style="@style/myStyle"
        android:textColor="@color/black"
        android:text="Tổng tiền"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="@drawable/textline_bottom"
        android:padding="7dp"
        android:textColor="@color/black"
        style="@style/myStyle"
        android:textSize="17sp"
        android:text="Trạng thái: "
        android:id="@+id/tvTrangThai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:background="@drawable/my_btn_custom"
            android:text="Xác nhận hóa đơn"
            android:id="@+id/btnXacNhan"
            android:layout_width="350dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/white"

            android:layout_margin="3dp"
            android:id="@+id/btnCapNhat"
            android:layout_width="350dp"
            android:background="@drawable/my_btn_custom"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="350dp"
            android:textColor="@color/white"

            android:background="@drawable/my_btn_custom"
            android:text="Trả hàng"
            android:id="@+id/btnTraHang"
            android:layout_margin="3dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnThanhToan"
            android:layout_width="350dp"
            android:textColor="@color/white"

            android:background="@drawable/my_btn_custom"
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHuyDon"
            android:layout_width="350dp"
            android:textColor="@color/white"

            android:layout_height="wrap_content"
            android:text="Hủy đơn"
            android:background="@drawable/my_btn_custom_2"
            android:layout_margin="3dp"
            />
    </LinearLayout>

</LinearLayout>