<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
    app:cardElevation="30dp"
    android:layout_height="wrap_content">



    <LinearLayout
        android:background="#F5FFFD"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="#FAFFFE"
                android:id="@+id/ivAnh"
                android:layout_marginRight="10dp"
                android:src="@drawable/baseline_add_24"
                android:layout_width="150dp"
                android:layout_weight="1"
                android:layout_height="208dp"/>


            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="#FF5757"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/txtTen"
                    android:textSize="30dp"
                    android:text="Tên sách "
                    android:textStyle="bold|italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginLeft="2dp"
                    android:textColor="#121212"
                    android:id="@+id/txtTacgia"
                    android:textSize="17dp"
                    android:layout_margin="5dp"
                    android:text="Tác giả: "
                    android:textStyle="bold|italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="2dp"
                    android:textColor="#121212"
                    android:id="@+id/txtTheLoai"
                    android:text="Thể loại: "
                    android:layout_margin="5dp"
                    android:textSize="17dp"

                    android:textStyle="bold|italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginLeft="2dp"
                    android:textColor="#121212"
                    android:id="@+id/txtGia"
                    android:layout_marginTop="13dp"
                    android:textSize="23dp"
                    android:layout_marginBottom="-5dp"
                    android:text="Giá: "
                    android:textStyle="bold|italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:gravity="center"
            android:scaleType="centerCrop"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="38dp">


                <ImageView
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/box_vuong"
                    android:id="@+id/ivTang"
                    android:src="@drawable/baseline_add_24"
                    android:layout_width="17dp"
                    android:layout_height="17dp"/>

                <TextView
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:background="@drawable/box_vuong"
                    android:id="@+id/txtSoluong"
                    android:text="@string/soluong"
                    android:textColor="#0B0B0B"
                    android:textStyle="bold"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/ivGiam"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/box_vuong"
                    android:src="@drawable/outline_horizontal_rule_24" />

            </LinearLayout>


            <ImageView
                android:layout_marginLeft="180dp"
                android:background="@drawable/box_vuong"
                android:id="@+id/ivXoa"
                android:src="@drawable/baseline_delete_24"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <LinearLayout
                android:paddingEnd="10dp"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>