<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    app:cardElevation="30dp"
    android:layout_height="wrap_content">



    <LinearLayout
        android:background="#FFEEEE"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:background="#FFFAFA"
                android:id="@+id/ivAnh"
                android:layout_marginRight="10dp"
                android:src="@drawable/baseline_add_24"
                android:layout_width="150dp"
                android:layout_weight="1"
                android:layout_height="200dp"/>


            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="#C85353"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/txtTen"
                    android:textSize="30dp"
                    android:text="Tên sách "
                    android:textStyle="bold|italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#121212"
                    android:id="@+id/txtTacgia"
                    android:textSize="17dp"
                    android:layout_margin="6dp"
                    android:text="Tác giả: "
                    android:textStyle="bold|italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#121212"
                    android:id="@+id/txtGia"
                    android:text="Giá: "
                    android:layout_margin="6dp"
                    android:textSize="17dp"

                    android:textStyle="bold|italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#121212"
                    android:id="@+id/txtTheLoai"
                    android:layout_marginTop="3dp"
                    android:textSize="18dp"
                    android:layout_marginBottom="-1dp"

                    android:text="Thể loại: "
                    android:textStyle="bold|italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:gravity="center"
            android:scaleType="centerCrop"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="38dp"
                android:gravity="center"
                android:background="@drawable/box_border"
                android:orientation="horizontal"
                android:layout_width="120dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivTang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/box_vuong"
                    android:src="@drawable/baseline_add_24" />

                <TextView
                    android:id="@+id/txtSoluong"
                    android:textSize="32dp"
                    android:text="@string/soluong"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:background="@drawable/box_vuong"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center"
                    android:id="@+id/ivGiam"
                    android:src="@drawable/outline_horizontal_rule_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_marginLeft="200dp"
                android:id="@+id/ivXoa"
                android:src="@drawable/baseline_delete_24"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <LinearLayout
                android:paddingEnd="10dp"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>