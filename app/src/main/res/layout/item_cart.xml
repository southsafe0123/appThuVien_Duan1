<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15sp"
    android:layout_margin="7sp"
    app:cardElevation="30sp"
    android:layout_height="wrap_content">



    <LinearLayout
        android:background="#F5FFFD"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="2sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAnh"
                android:padding="10sp"
                android:src="@drawable/baseline_add_24"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"/>


            <LinearLayout

                android:layout_weight="5"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/xanh_btn"
                    android:id="@+id/txtTen"
                    android:textSize="25dp"
                    android:text="Tên sách "
                    android:paddingTop="5sp"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="#121212"
                    android:id="@+id/txtTacgia"
                    android:textSize="17dp"
                    android:layout_margin="5sp"
                    android:padding="5sp"
                    android:text="Tác giả: "
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView

                    android:textColor="#121212"
                    android:id="@+id/txtTheLoai"
                    android:text="Thể loại: "
                    android:layout_margin="5sp"
                    android:padding="5sp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="#121212"
                    android:id="@+id/txtGia"
                    android:layout_margin="6sp"
                    android:padding="5sp"
                    android:textSize="20dp"
                    android:text="Giá: "
                    android:fontFamily="sans-serif-black"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>



        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal">


                <ImageView
                    android:layout_weight="0.08"
                    android:id="@+id/ivTang"
                    android:src="@drawable/baseline_add_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_weight="0.15"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:id="@+id/txtSoluong"
                    android:text="@string/soluong"
                    android:textColor="#0B0B0B"
                    android:textStyle="bold"
                    android:layout_width="20sp"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:layout_weight="0.1"
                    android:id="@+id/ivGiam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_horizontal_rule_24" />
                <ImageView
                    android:layout_weight="1.4"
                    android:visibility="invisible"
                    android:src="@drawable/baseline_delete_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_weight="0.2"
                    android:id="@+id/ivXoa"
                    android:src="@drawable/baseline_delete_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>